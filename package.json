{
  "name": "svelte-aplayer",
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:wc && npm run build:svelte",
    "build:wc": "cross-env CUSTOM_ELEMENT=1 vite build",
    "build:svelte": "cross-env CUSTOM_ELEMENT=0 vite build -c vite.config.svelte.js",
    "format": "prettier -w **/*.{svelte,ts,js}",
    "serve": "vite preview"
  },
  "browser": "dist/",
  "homepage": "https://github.com/fengkx/svelte-aplayer",
  "files": [
    "dist/**/*"
  ],
  "devDependencies": {
    "@rollup/plugin-image": "^2.0.6",
    "@sveltejs/vite-plugin-svelte": "next",
    "cross-env": "^7.0.3",
    "pre-commit": "^1.2.2",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^2.2.0",
    "sass": "^1.32.8",
    "svelte": "^3.35.0",
    "svelte-preprocess": "^4.6.9",
    "typescript": "^4.2.3",
    "vite": "^2.1.3"
  },
  "pre-commit": [
    "format"
  ]
}
